<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_header.ejs') -%>

  <body>
    <!-- Navigation -->
    <%- include('partials/_navigation.ejs') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= blog.title %></h1>

              <span class="meta">Posted on <%= blog.dateCreated %></span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p><%= blog.message %></p>
          </div>
        </div>
      </div>
    </article>

    <hr />

    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-10 mx-auto">
          <a
            href="/post/edit/<%= blog._id %>"
            type="submit"
            class="btn btn-primary"
            id="sendMessageButton"
          >
            Update
          </a>
          <a
            href="/post/<%= blog._id %>?_method=DELETE"
            type="submit"
            class="btn btn-danger"
            id="sendMessageButton"
            onclick="return confirm('Are you sure?')"
          >
            Delete
          </a>
        </div>
      </div>
    </div>

    <hr />
    <!-- Footer -->
    <%- include('partials/_footer.ejs') -%>

    <!-- Custom scripts for this template -->
    <script src="/js/clean-blog.min.js"></script>
  </body>
</html>
